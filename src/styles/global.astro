---
import Variables from './variables.astro';
---

<style is:global>
  html,
  body {
    width: 100%;
    min-height: 100vh;
    margin-top: 0;
    padding: 0;
    overflow-x: hidden;
    align-items: center;
    font-size: var(--font-size-base);
    font-family: 'Montserrat', serif;
    font-optical-sizing: auto;
    color: var(--color-text);
    font-style: normal;
    font-weight: 400;
  }

  html {
    scroll-padding-top: 75px; /* Altura de tu navbar */
    scroll-behavior: smooth;
  }
  .main-content {
    width: 100%;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: rgb(189, 186, 182);
    /* background: linear-gradient(
      120deg,
      #f4f4f9,
      #18933b,
      #2a2829,
      rgb(244, 244, 249)
    ); /* Corregido: Usa rgb() para definir los colores */
    /* background-size: 200% 200%;
    animation: waveAnimation 8s ease infinite; */
  }

  @keyframes waveAnimation {
    0% {
      background-position: 0% 0%;
    }
    50% {
      background-position: 100% 100%;
    }
    100% {
      background-position: 0% 0%;
    }
  }

  .nav {
    position: fixed;
    height: var(--navbar-height);
    top: 0;
    left: 0;
  }

  .footer {
    height: var(--footer-height);
  }

  .education-list {
    max-width: 100%;
    margin: 0 auto;
  }
</style>
