---
import Breackpoints from './breackpoints.astro';
import Variables from './variables.astro';
---

<style is:global>
  html,
  body {
    width: 100vw;
    max-width: 100vw;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    align-items: center;
    font-size: var(--font-size-base);
    background-color: var(--color-background);
    color: var(--color-text);
  }

  body {
    display: grid;
    grid-template-rows: auto 1fr;
    width: 100%;
    min-height: 100vh;
  }

  .main-content {
    width: 100%;
    display: flex;
    height: 100%;
    justify-content: center;
    align-items: center;
    margin: 0;
    padding: 0;
  }

  .nav-bar {
    width: 100%;
    height: var(--navbar-height);
    background-color: rgb(255, 255, 255);
    display: flex;
    position: static;
    color: black;
    margin: 0px;
    z-index: 1000;
  }

  .nav-bar img {
    height: 50px;
    width: auto;
    object-fit: contain;
    max-height: 60px;
  }

  .nav-bar a {
    padding: 12px;
    margin: 0px;
  }

  .container-content-center {
    height: auto;
    width: auto;
    justify-content: center;
    align-items: center;
    display: grid;
  }
</style>
