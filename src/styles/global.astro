---
import Variables from './variables.astro';
---

<style is:global>
  html,
  body {
    width: 100% !important;
    display: flex;
    height: 100%;
    flex-direction: column;
    margin: 0;
    padding: 0;
    align-items: center;
    font-size: var(--font-size-base);
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      'Open Sans',
      'Helvetica Neue',
      sans-serif;
    /* background-color: var(--color-background); */
    color: var(--color-text);
  }

  .main-content {
    width: 100%;
    height: calc(100vh - var(--navbar-height));
    margin-top: 6%;
    padding: 24px;
  }

  .nav {
    position: fixed;
    height: var(--navbar-height);
  }

  .brand-content-center {
    height: 100%;
    width: 100%;
    justify-content: center;
    align-items: center;
    display: flex;
    flex-direction: column;
  }

  .education-list {
    max-width: 100%;
    margin: 0 auto;
  }
</style>
