---
import Button from '../components/ui/Button.astro';
import Contact from '../components/ui/Contact.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Home">
  <article class="w-full full" id="home-section">
    <section
      class="relative h-screen w-screen items-center flex flex-col justify-center bg-gradient-to-br from-blue-900 to-purple-900 text-white"
      style="background-image: url('https://images.unsplash.com/photo-1517134191118-9d595e4c8c2b?auto=format&fit=crop&q=80'); background-size: cover; background-position: center -75px;"
    >
      <div
        class="relative flex flex-col z-10 text-center justify-center items-center px-4"
      >
        <span class="text-4xl md:text-5xl font-bold mb-4">
          Hola, soy Jhon Jairo Legarda Erazo
        </span>

        <p class="text-2xl md:text-3xl text-gray-200 mb-8">
          Desarrollador Frontend Junior
        </p>
        <div class="flex content-between justify-center gap-4">
          <Button
            href="#projects-section"
            variant="secondary"
            type="submit"
            class="text-lg"
          >
            Ver proyectos
          </Button>
          <Button
            href="#contant-section"
            variant="primary"
            type="submit"
            class="text-lg"
          >
            Contacto
          </Button>
        </div>
        <div class="pt-4"><Contact /></div>
      </div>
    </section>
  </article>
</Layout>
