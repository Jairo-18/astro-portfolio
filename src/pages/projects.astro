---
import ProjectsGrid from '../components/projects/ProjectsGrid.astro';
import { projects } from '../data/Projects';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Proyectos">
  <article id="projects-section" class="w-full full">
    <section
      class="h-screen w-screen items-center flex flex-col justify-center"
    >
      <div>
        <h1 class="font-bold text-black dark:text-white">Mis Proyectos</h1>
        <div
          class="flex flex-col lg:flex-row lg:justify-between justify-center gap-4"
        >
          <ProjectsGrid projects={projects} />
        </div>
      </div>
    </section>
  </article>
</Layout>
