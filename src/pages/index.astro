---
import Layout from '../layouts/Layout.astro';
import Button from '../components/ui/Button.astro';
import NavBar from '../components/navigation/NavBar.astro';
import Footer from '../components/navigation/Footer.astro';
import Projects from './projects.astro';
import Education from './education.astro';
import AboutMe from './about-me.astro';
import Contact from './contact.astro';
---

<Layout title="Portfolio">
  <NavBar />
  <article class="main-content">
    <div class="w-full p-5">
      <section class="h-screen flex flex-col justify-center items-center">
        <div>
          <span class="font-bold mb-3 text-black dark:text-white">
            ¡Hola! Soy <span class="text-purple-600 dark:text-purple-500"
              >Desarrollador Frontend</span
            >
            <h1>En desarrollo!!!!!</h1>
          </span>
        </div>
        <p class="text-black dark:text-white mb-3">
          Creo experiencias web únicas y atractivas utilizando las últimas
          tecnologías
        </p>
        <div class="flex justify-center gap-2">
          <Button
            href="/projects"
            variant="secondary"
            type="submit"
            class="text-lg"
          >
            Ver proyectos
          </Button>
          <Button
            href="/contact"
            variant="primary"
            type="submit"
            class="text-lg"
          >
            Contacto
          </Button>
        </div>
      </section>
      <section class="h-screen flex flex-col justify-center items-center">
        <Projects />
      </section>
      <section class="h-screen flex flex-col justify-center items-center">
        <Education />
      </section>
      <section class="cont flex flex-col justify-center items-center">
        <AboutMe />
      </section>
      <section class="cont flex flex-col justify-center items-center">
        <Contact />
      </section>
    </div>
  </article>
  <Footer />
</Layout>
