---
import Layout from '../layouts/Layout.astro';
import Button from '../components/ui/Button.astro';
---

<Layout title="Portfolio">
  <article class="brand-content-center">
    <div class="flex flex-col">
      <div>
        <span class="font-bold mb-3 text-black dark:text-white">
          ¡Hola! Soy <span class="text-purple-600 dark:text-purple-500"
            >Desarrollador Frontend</span
          >
        </span>
      </div>
      <p class="text-black dark:text-white mb-3">
        Creo experiencias web únicas y atractivas utilizando las últimas
        tecnologías
      </p>
      <div class="flex justify-center gap-2">
        <Button
          href="/projects"
          variant="secondary"
          type="submit"
          class="text-lg"
        >
          Ver proyectos
        </Button>
        <Button href="/contact" variant="primary" type="submit" class="text-lg">
          Contacto
        </Button>
      </div>
    </div>
  </article>
</Layout>
