---
import { Image } from 'astro:assets';
import logo from '../../assets/images/logo.png';
import GlobalStyles from '../../styles/global.astro';
import Variables from '../../styles/variables.astro';
---

<GlobalStyles />
<Variables />
<div class="bg-white shadow-md nav-bar">
  <!-- Logo y nombre -->
  <div class="container flex items-center justify-start px-4 py-3">
    <Image src={logo} alt="Logo optimizado" class="h-16 w-auto" />
    <h1 class="text-xl p-3">Jhon Legarda</h1>
  </div>

  <!-- Icono de menú para pantallas pequeñas -->

  <div
    class="container items-center lg:flex lg:space-x-6 space-y-4 lg:space-y-0 hidden justify-end grid m-2 justify-start"
    id="menu"
  >
    <a class="text-black" href="/portfolio">Portfolio</a>
    <a class="text-black" href="/about-me">About-me</a>
    <a class="text-black" href="/contact">Contact</a>
  </div>

  <button class="lg:hidden block p-3" id="menu-toggle">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      class="w-8 h-8"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M4 6h16M4 12h16M4 18h16"></path>
    </svg>
  </button>
</div>

<!-- Menú -->

<script>
  // Lógica para mostrar/ocultar el menú en pantallas pequeñas
  const menuToggle = document.getElementById('menu-toggle');
  const menu = document.getElementById('menu');

  menuToggle?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>

<style>
  .nav-bar {
    width: 100%;
    height: 100px;
    background-color: rgb(255, 255, 255);
    display: flex;
    position: relative;
    color: black;
    margin: 0px;
    padding: 0px;
  }

  .nav-bar img {
    height: 50px;
    width: auto;
    object-fit: contain;
    max-height: 60px;
  }

  .nav-bar a {
    padding: 12px;
    margin: 0px;
  }
</style>
