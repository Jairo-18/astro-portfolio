---
interface Props {
  href?: string;
  type?: 'button' | 'submit';
  variant?: 'primary' | 'secondary';
  class?: string;
}

const {
  href,
  type = 'button',
  variant = 'primary',
  class: className = '',
  ...rest // Captura propiedades adicionales
} = Astro.props;

const baseStyles = 'px-4 py-2 rounded-md transition-colors';
const variants = {
  primary: 'bg-black text-white hover:text-blue-500',
  secondary: 'bg-purple-700 text-white hover:text-blue-500',
};

const Component = href ? 'a' : 'button';
---

<Component
  {...href ? { href } : { type }}
  class:list={[baseStyles, variants[variant], className]}
  {...rest}
>
  <slot />
</Component>
