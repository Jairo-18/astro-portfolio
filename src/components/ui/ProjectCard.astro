---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description: string;
  image: string | ImageMetadata;
  tags: string[];
  github?: string;
  demo?: string;
}

const { title, description, image, tags, github, demo } = Astro.props;
---

<div class="bg-white dark:bg-gray-700 rounded-lg shadow-md overflow-hidden">
  <div class="overflow-hidden object-contain rounded-t-lg">
    {
      typeof image === 'string' ? (
        <img src={image} alt={title} class="w-full h-40 object-cover" />
      ) : (
        <Image src={image} alt={title} class="w-full h-40 object-cover" />
      )
    }
  </div>
  <div class="px-4 py-1">
    <h3 class="text-xl text-black font-bold mb-2">{title}</h3>
    <p class="text-black dark:text-white mb-2">{description}</p>
  </div>

  <div class="flex flex-wrap gap-2 px-4 mb-4">
    {
      tags.map((tag) => (
        <span class="bg-purple-200 dark:bg-purple-800 text-purple-500 dark:text-black text-sm px-3 py-1 rounded-full">
          {tag}
        </span>
      ))
    }
  </div>
  <div class="flex space-x-4 px-4 pb-4">
    {
      github && (
        <a
          href={github}
          target="_blank"
          class="text-black dark:text-white hover:text-blue-500 underline"
        >
          Repositorio
        </a>
      )
    }
    {
      demo && (
        <a
          href={demo}
          target="_blank"
          class="text-black dark:text-white hover:text-blue-500 underline"
        >
          PÃ¡gina
        </a>
      )
    }
  </div>
</div>
