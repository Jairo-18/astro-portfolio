---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description: string;
  image: string | ImageMetadata;
  tags: string[];
  github?: string;
  demo?: string;
}

const { title, description, image, tags, github, demo } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md overflow-hidden">
  {
    typeof image === 'string' ? (
      <img src={image} alt={title} class="w-full h-40 object-cover" />
    ) : (
      <Image src={image} alt={title} class="w-full h-40 object-cover" />
    )
  }
  <div class="p-6">
    <h3 class="text-xl font-bold mb-2">{title}</h3>
    <p class="text-gray-600 mb-4">{description}</p>
    <div class="flex flex-wrap gap-2 mb-4">
      {
        tags.map((tag) => (
          <span class="bg-purple-100 text-purple-800 text-sm px-3 py-1 rounded-full">
            {tag}
          </span>
        ))
      }
    </div>
    <div class="flex space-x-4">
      {
        github && (
          <a
            href={github}
            target="_blank"
            class="text-gray-600 hover:text-purple-600"
          >
            Repositorio
          </a>
        )
      }
      {
        demo && (
          <a
            href={demo}
            target="_blank"
            class="text-gray-600 hover:text-purple-600"
          >
            PÃ¡gina
          </a>
        )
      }
    </div>
  </div>
</div>
