---
// EducationList.astro

import type { Certification } from '../../data/Certification';
import Tags from '../ui/Tags.astro';

interface Props {
  certification: Certification[];
}

const { certification } = Astro.props;
---

<div class="education-list space-y-6">
  {
    certification.map((item) => (
      <div class="education-item shadow-md rounded-lg p-4 bg-white">
        <h3 class="text-xl font-semibold text-gray-800">
          <Tags text={item.institute_name} />
        </h3>
        <div class="tags-container mt-2">{item.tittle}</div>
        <p class="text-gray-600 pt-2">
          <strong>TÃ­tulo:</strong> {item.tittle}
        </p>
        <p class="text-gray-500">
          <strong>Fechas:</strong>{' '}
          {item.start_date instanceof Date
            ? item.start_date.toLocaleDateString()
            : item.start_date}{' '}
          -{' '}
          {item.end_date instanceof Date
            ? item.end_date.toLocaleDateString()
            : item.end_date}
        </p>
      </div>
    ))
  }
</div>

